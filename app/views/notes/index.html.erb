<br>
<h1 class="mt-4"><%= t("notes.title") %></h1>

<ol class="breadcrumb mb-4 hidden-print">
  <li class="breadcrumb-item active"><%= t('notes.nav') %></li>
</ol>

<div class="card mb-4">
  <div class="card-header">
    <%= link_to new_note_path, class: "btn btn-success btn-xs", data: { toggle: 'tooltip', placement: 'top' }, title: t('actions.new') do %>
      <i class="fa fa-sticky-note fa-fw" aria-hidden="true"></i>
      New Note
    <% end %>
  </div>

  <%= render partial: "notes/notes_table" %>

</div>

