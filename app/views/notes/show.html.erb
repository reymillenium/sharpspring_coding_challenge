<br>
<h1 class="mt-4"><%= t("notes.details.header") %></h1>

<ol class="breadcrumb mb-4 hidden-print">
  <li>
    <%= link_to notes_path do %>
      <%= t('notes.nav') %>
    <% end %>
  </li> &nbsp;/&nbsp;
  <li class="active"> <%= t('notes.details.header') %></li>
</ol>

<div class="card mb-4">
  <div class="card-header">
    <%= link_to edit_note_path(@note, return_to: note_path(@note)), class: "btn btn-success btn-sm", data: { toggle: 'tooltip', placement: 'top' }, title: t('actions.edit') do %>
      <i class="fa fa-pencil-alt fa-fw" aria-hidden="true"></i>
      Edit Note
    <% end %>
  </div>

  <div class="card-body">
    <div class="form-horizontal border_bottom">
      <!-- Details Row # 1:  -->
      <div class="form-group">
        <div class="col-sm-12">
          <label class="control-label">
            <%#= humanize_attribute(flag_model, :name) %>
            Title:
          </label>
          <p class="form-control-static">
            <%= if_applicable @note.title, titleize: false %>
            <%#= @note.title %>
          </p>
        </div>
      </div>

      <!-- Separation Row: Makes this partial more similar to the edit/new form  -->
      <div class="form-group"></div>

      <!-- Details Row # 2: -->
      <div class="form-group">
        <div class="col-sm-12">
          <label class="control-label">
            <%#= humanize_attribute(flag_model, :body) %>
            Body:
          </label>
          <div class="form-control-static" style="border: 1px solid black; border-radius: 4px; padding: 12px;">
            <%= @note.body %>
          </div>
        </div>
      </div>

      <!-- Separation Row: Makes this partial more similar to the edit/new form  -->
      <div class="form-group"></div>
    </div>
  </div>
</div>
