<div class="row justify-content-center mt-4">
  <div class="col-lg-7">
    <div class="card shadow-lg border-0 rounded-lg mt-5">
      <div class="card-header">
        <img class="ml-4 float-left" style="width: 41px; height: 43px; margin-top: 20px; position: absolute;" src=<%= "#{asset_path 'old-note-transparent.png'}" %>>
        <h3 class="text-center font-weight-light my-4">
          Edit Account
        </h3>
      </div>

      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <div class="form-row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :first_name, class: 'small mb-1' %>
                <%= f.text_field :first_name, class: 'form-control py-4', autofocus: true, autocomplete: "first_name", placeholder: 'Enter first name' %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :last_name, class: 'small mb-1' %>
                <%= f.text_field :last_name, class: 'form-control py-4', autofocus: true, autocomplete: "first_name", placeholder: 'Enter last name' %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :email, class: 'small mb-1' %>
            <%= f.email_field :email, class: 'form-control py-4', autofocus: true, autocomplete: "email", placeholder: 'Enter email address' %>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div class="small mb-1">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.label :password, class: 'small mb-1' %>
            <% if @minimum_password_length %>
              <em class="small mb-1">(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, class: 'form-control py-4', autocomplete: "new-password", placeholder: "Enter password (leave blank if you don't want to change it)" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "Confirm Password", class: 'small mb-1' %><br/>
            <%= f.password_field :password_confirmation, class: 'form-control py-4', autocomplete: "new-password", placeholder: 'Confirm password' %>
          </div>

          <div class="form-group">
            <%= f.label :current_password, class: 'small mb-1' %>
            <% if @minimum_password_length %>
              <em class="small mb-1">(necessary to confirm your changes)</em>
            <% end %>
            <%= f.password_field :current_password, class: 'form-control py-4', autocomplete: "current-password", placeholder: 'Current password' %>
          </div>

          <div class="form-row">
            <div class="col-md-6">
              <div class="form-group mt-2 mb-0">
                <%= link_to "Back", :back, class: 'btn btn-danger btn-block' %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group mt-2 mb-0">
                <%= f.submit "Update", class: 'btn btn-primary btn-block' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="card-footer text-center">
        <div class="small">
          <%= link_to "Unhappy? Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, style: 'text-decoration: none;' %>
          <br/>
        </div>
      </div>
    </div>
  </div>
</div>