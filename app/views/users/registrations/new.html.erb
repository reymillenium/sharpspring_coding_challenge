<div class="row justify-content-center mt-4">
  <div class="col-lg-7">
    <div class="card shadow-lg border-0 rounded-lg mt-5">
      <div class="card-header">
        <img class="ml-4 float-left" style="width: 41px; height: 43px; margin-top: 20px; position: absolute;" src=<%= "#{asset_path 'old-note-transparent.png'}" %>>
        <h3 class="text-center font-weight-light my-4">
          Create Account
        </h3>
      </div>

      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :first_name, class: 'small mb-1' %>
                <%= f.text_field :first_name, class: 'form-control py-4', autofocus: true, autocomplete: "first_name", placeholder: 'Enter first name' %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :last_name, class: 'small mb-1' %>
                <%= f.text_field :last_name, class: 'form-control py-4', autofocus: true, autocomplete: "first_name", placeholder: 'Enter last name' %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :email, class: 'small mb-1' %>
            <%= f.email_field :email, class: 'form-control py-4', autofocus: true, autocomplete: "email", placeholder: 'Enter email address' %>
          </div>

          <div class="form-row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :password, class: 'small mb-1' %>
                <% if @minimum_password_length %>
                  <em class="small mb-1">(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
                <%= f.password_field :password, class: 'form-control py-4', autocomplete: "new-password", placeholder: 'Enter password' %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :password_confirmation, "Confirm Password", class: 'small mb-1' %><br/>
                <%= f.password_field :password_confirmation, class: 'form-control py-4', autocomplete: "new-password", placeholder: 'Confirm password' %>
              </div>
            </div>
          </div>

          <div class="form-group mt-4 mb-0">
            <%= f.submit "Create Account", class: 'btn btn-primary btn-block' %>
          </div>
        <% end %>
      </div>

      <div class="card-footer text-center">
        <div class="small">
          <%- if controller_name != 'sessions' %>
            <%= link_to "Have an account? Go to login", new_session_path(resource_name), style: 'text-decoration: none;' %>
            <br/>
          <% end %>
          <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
            <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), style: 'text-decoration: none;' %>
            <br/>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>